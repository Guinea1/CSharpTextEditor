<Window x:Class="CSharpTextEditor.SaveChanges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpTextEditor"
        mc:Ignorable="d"
        Title="Save Changes" Height="150" Width="300" Closing="close_click" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Do you want to save your changes?" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="69,62,0,0" VerticalAlignment="Top" Click="save_click"/>
        <Button Content="Don't Save" HorizontalAlignment="Left" Margin="113,62,0,0" VerticalAlignment="Top" Click="dontsave_click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="188,62,0,0" VerticalAlignment="Top" Click="cancel_click"/>
    </Grid>
</Window>
